<style>
  .social-section {
    background: white;
    border-top: 1px solid #e5e7eb;
    padding: 3rem 0;
  }

  .social-container {
    text-align: center;
  }

  .social-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 0.75rem 0;
  }

  .social-description {
    font-size: 1.125rem;
    color: #666;
    margin: 0 0 2rem 0;
    line-height: 1.6;
  }

  .social-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    align-items: center;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    color: #374151;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9375rem;
    transition: all 0.2s;
  }

  .social-link:hover {
    background: #f3f4f6;
    border-color: #d1d5db;
    color: #1a1a1a;
    transform: translateY(-2px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .social-link svg {
    flex-shrink: 0;
  }

  .social-link span {
    white-space: nowrap;
  }

  @media (max-width: 640px) {
    .social-section {
      padding: 2rem 0;
    }

    .social-title {
      font-size: 1.5rem;
    }

    .social-description {
      font-size: 1rem;
    }

    .social-links {
      flex-direction: column;
      gap: 0.75rem;
    }

    .social-link {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }
</style>
