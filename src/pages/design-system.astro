---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Design System">
  <main class="container design-system">
    <header class="ds-header">
      <h1>Wallbreaker Design System</h1>
      <p>A showcase of all UI components, layouts, and design patterns used throughout the site.</p>
    </header>

    <!-- Typography -->
    <section class="ds-section">
      <h2>Typography</h2>
      
      <div class="ds-example">
        <h1>Heading 1</h1>
        <h2>Heading 2</h2>
        <h3>Heading 3</h3>
        <h4>Heading 4</h4>
        <h5>Heading 5</h5>
        <h6>Heading 6</h6>
        <p>This is a paragraph with some <strong>bold text</strong> and some <em>italic text</em>. It also includes a <a href="#">link example</a>.</p>
      </div>
    </section>

    <!-- Colors -->
    <section class="ds-section">
      <h2>Colors</h2>
      <div class="color-grid">
        <div class="color-swatch" style="background: #2563eb;">
          <span>Primary<br/>#2563eb</span>
        </div>
        <div class="color-swatch" style="background: #1e40af; color: white;">
          <span>Primary Dark<br/>#1e40af</span>
        </div>
        <div class="color-swatch" style="background: #374151; color: white;">
          <span>Text<br/>#374151</span>
        </div>
        <div class="color-swatch" style="background: #f3f4f6;">
          <span>Background<br/>#f3f4f6</span>
        </div>
      </div>
    </section>

    <!-- Buttons -->
    <section class="ds-section">
      <h2>Buttons</h2>
      <div class="ds-example button-group">
        <button class="btn btn-primary">Primary Button</button>
        <button class="btn btn-secondary">Secondary Button</button>
        <button class="btn btn-outline">Outline Button</button>
        <button class="btn btn-primary" disabled>Disabled Button</button>
      </div>
    </section>

    <!-- Product Cards -->
    <section class="ds-section">
      <h2>Product Cards</h2>
      <div class="product-grid">
        <product-card
          product-id="example-1"
          title="Classic T-Shirt"
          price="29.99"
        ></product-card>
        
        <product-card
          product-id="example-2"
          title="Hoodie"
          price="49.99"
        ></product-card>
        
        <product-card
          product-id="example-3"
          title="Cap"
          price="19.99"
        ></product-card>
      </div>
    </section>

    <!-- Forms -->
    <section class="ds-section">
      <h2>Forms</h2>
      <form class="ds-example ds-form">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" placeholder="Enter your name" />
        </div>
        
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="your@email.com" />
        </div>
        
        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" name="message" rows="4" placeholder="Your message here..."></textarea>
        </div>
        
        <div class="form-group">
          <label class="checkbox-label">
            <input type="checkbox" name="subscribe" />
            <span>Subscribe to newsletter</span>
          </label>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </section>

    <!-- Layout Examples -->
    <section class="ds-section">
      <h2>Layout Patterns</h2>
      
      <h3>Grid Layout</h3>
      <div class="grid-example">
        <div class="grid-item">Grid Item 1</div>
        <div class="grid-item">Grid Item 2</div>
        <div class="grid-item">Grid Item 3</div>
        <div class="grid-item">Grid Item 4</div>
      </div>
      
      <h3>Flex Layout</h3>
      <div class="flex-example">
        <div class="flex-item">Flex Item 1</div>
        <div class="flex-item">Flex Item 2</div>
        <div class="flex-item">Flex Item 3</div>
      </div>
    </section>
  </main>

  <!-- Load custom elements -->
  <script>
    import '@/components/ProductCard';
  </script>

  <style>
    .design-system {
      padding: 3rem 0;
    }
    
    .ds-header {
      margin-bottom: 4rem;
      text-align: center;
    }
    
    .ds-header h1 {
      font-size: 3rem;
      margin-bottom: 1rem;
    }
    
    .ds-header p {
      font-size: 1.25rem;
      color: #6b7280;
      max-width: 60ch;
      margin: 0 auto;
    }
    
    .ds-section {
      margin-bottom: 4rem;
      padding-bottom: 4rem;
      border-bottom: 1px solid #e5e7eb;
    }
    
    .ds-section:last-child {
      border-bottom: none;
    }
    
    .ds-section > h2 {
      font-size: 2rem;
      margin-bottom: 2rem;
    }
    
    .ds-section > h3 {
      font-size: 1.5rem;
      margin: 2rem 0 1rem;
    }
    
    .ds-example {
      padding: 2rem;
      background: #f9fafb;
      border: 1px solid #e5e7eb;
      border-radius: 0.5rem;
    }
    
    /* Color Swatches */
    .color-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 1rem;
    }
    
    .color-swatch {
      aspect-ratio: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      font-weight: 600;
      text-align: center;
      padding: 1rem;
    }
    
    /* Buttons */
    .button-group {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    .btn {
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: 0.375rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }
    
    .btn-primary {
      background: #2563eb;
      color: white;
    }
    
    .btn-primary:hover:not(:disabled) {
      background: #1e40af;
    }
    
    .btn-secondary {
      background: #6b7280;
      color: white;
    }
    
    .btn-secondary:hover:not(:disabled) {
      background: #4b5563;
    }
    
    .btn-outline {
      background: transparent;
      color: #2563eb;
      border: 2px solid #2563eb;
    }
    
    .btn-outline:hover:not(:disabled) {
      background: #2563eb;
      color: white;
    }
    
    .btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
    
    /* Product Cards */
    .product-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 2rem;
    }
    
    /* Global product card styles */
    :global(.product-card) {
      border: 1px solid #e5e7eb;
      border-radius: 0.5rem;
      overflow: hidden;
      transition: box-shadow 0.2s;
    }
    
    :global(.product-card:hover) {
      box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    }
    
    :global(.product-image) {
      aspect-ratio: 1;
      background: #f3f4f6;
    }
    
    :global(.product-image img) {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    :global(.product-info) {
      padding: 1rem;
    }
    
    :global(.product-title) {
      font-size: 1.125rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    
    :global(.product-price) {
      font-size: 1.25rem;
      font-weight: 700;
      color: #2563eb;
      margin-bottom: 1rem;
    }
    
    :global(.add-to-cart-button) {
      width: 100%;
      padding: 0.75rem;
      background: #2563eb;
      color: white;
      border: none;
      border-radius: 0.375rem;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.2s;
    }
    
    :global(.add-to-cart-button:hover) {
      background: #1e40af;
    }
    
    /* Forms */
    .ds-form {
      max-width: 500px;
    }
    
    .form-group {
      margin-bottom: 1.5rem;
    }
    
    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 600;
      color: #374151;
    }
    
    .form-group input[type="text"],
    .form-group input[type="email"],
    .form-group textarea {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #d1d5db;
      border-radius: 0.375rem;
      font-size: 1rem;
    }
    
    .form-group input:focus,
    .form-group textarea:focus {
      outline: none;
      border-color: #2563eb;
      box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
    }
    
    .checkbox-label {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      cursor: pointer;
    }
    
    .checkbox-label input[type="checkbox"] {
      width: 1.25rem;
      height: 1.25rem;
      cursor: pointer;
    }
    
    /* Layout Examples */
    .grid-example {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      margin-bottom: 2rem;
    }
    
    .grid-item {
      padding: 2rem;
      background: #dbeafe;
      border: 2px solid #2563eb;
      border-radius: 0.5rem;
      text-align: center;
      font-weight: 600;
    }
    
    .flex-example {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }
    
    .flex-item {
      flex: 1;
      min-width: 150px;
      padding: 2rem;
      background: #fef3c7;
      border: 2px solid #f59e0b;
      border-radius: 0.5rem;
      text-align: center;
      font-weight: 600;
    }
  </style>
</Layout>
